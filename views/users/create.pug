extends ../layouts/common
block content
    h1 Create users

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", value=values ? values.name : "") 
            //thêm value để kiềm tra xem biến có tồn tại hay không

        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", value=values ? values.phone : "")             
        button.btn.btn-primary.my-2 New  